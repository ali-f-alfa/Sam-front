<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Pages.EditProfile"
    android:layout_marginHorizontal="10dp"
    >


    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/ProfileImageEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/FirstNameEdit"
        android:src="@drawable/thumb_15951118880user"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SetNewPicture"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProfileImageEdit"
        android:text="Set new picture"
        android:textSize="15dp"
        android:clickable="true">

    </TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FirstNameEdit"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SetNewPicture"
        android:text="Edit  FirstName"
        >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LastNameEdit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FirstNameEdit"
        android:text="Edit Last Name"
        ></EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UsernameEdit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LastNameEdit"
        android:text="Edit Username"
        >

    </EditText>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BioEdit"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UsernameEdit"
        android:text="Edit Bio"
        >

    </EditText>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InterestEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/InterestsEditText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Wellness"
                android:layout_marginRight="20dp"
                >


            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Identity"
                android:layout_marginRight="20dp">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Places"
                android:layout_marginRight="20dp">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/WorldAffaris"
                android:layout_marginRight="20dp">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Tech"
                android:layout_marginRight="20dp">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/HangingOut"
                android:layout_marginRight="20dp">

            </ListView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/almostpink"
            android:text="Tech"
            android:layout_marginBottom="10dp"></TextView>

            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Knowledge"
                android:layout_marginRight="20dp">

            </ListView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/almostpink"
            android:text="Tech"
            android:layout_marginBottom="10dp"></TextView>

            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Hustle"
                android:layout_marginRight="20dp">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Sports"
                android:layout_marginRight="20dp"
                >

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Arts"
                android:layout_marginRight="20dp">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Life"
                android:layout_marginRight="20dp">

            </ListView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/almostpink"
            android:text="Tech"
            android:layout_marginBottom="10dp"></TextView>

            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Languages"
                android:layout_marginRight="20dp"
                >

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Entertainment"
                android:layout_marginRight="20dp"
                >

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/almostpink"
                android:text="Tech"
                android:layout_marginBottom="10dp"></TextView>
            <ListView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/Faith"
                android:layout_marginRight="20dp">

            </ListView>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests"
        android:layout_marginTop="10dp"
        android:id="@+id/InterestsEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BioEdit"
        android:textSize="20dp"
        android:textColor="@color/gray">

    </TextView>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InterestsOnOff"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textOff="Hide"
        android:textOn="Show"
        app:layout_constraintTop_toBottomOf="@id/BioEdit">

    </Switch>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/SaveButton"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/light"
        android:text="Save"
        android:textColor="@color/almostpink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/InterestEdit">

    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/LogoutButton"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light"
        android:text="Logout"
        android:textColor="@color/almostpink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SaveButton">

    </Button>
    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20sp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LogoutButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>



