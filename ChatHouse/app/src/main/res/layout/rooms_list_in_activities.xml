<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="20dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/RoomConsiced"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/Verypink"
                android:fontFamily="serif"
                android:text="Name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/RoomNameActivity"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="italic"
                android:text="Description"
                android:textColor="@color/almostgreen"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/RoomDescriptionActivity"
                android:layout_below="@id/RoomNameActivity"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="italic"
                android:text="Interest"
                android:textColor="@color/almostgreen"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/RoomInterestActivity"
                android:layout_below="@id/RoomDescriptionActivity"
                >
            </TextView>



        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>