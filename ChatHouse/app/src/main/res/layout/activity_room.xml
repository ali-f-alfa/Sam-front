<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.Room"
    android:background="?colorOnBackground"
    android:layout_margin="2dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?colorPrimaryVariant">

    </View>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/RoomName"
        android:layout_alignParentTop="true"
        android:text="Room"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textColor="?colorSecondary"
        android:clickable="true">

    </TextView>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center_vertical"
        android:id="@+id/LeaveRoom"
        android:src="@drawable/ic_baseline_exit_to_app_24"
        android:backgroundTint="#00E7D2CC"
>

    </ImageButton>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RoomName"
        android:id="@+id/chatFragment"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/Message"
            android:id="@+id/MessagesPart">

            <ListView
                android:id="@+id/chatBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/chat_downBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/SendButton"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:visibility="gone">
        </ImageButton>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:foregroundGravity="center_vertical"
            android:id="@+id/Attachment"
            android:src="@drawable/ic_baseline_attach_file_24"
            android:backgroundTint="#00E7D2CC"
            >

        </ImageButton>
        <EditText
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:maxLines="6"
            android:layout_height="wrap_content"
            android:hint="Enter message"
            android:id="@+id/Message"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/SendButton"
            android:layout_toEndOf="@+id/Attachment"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            >

        </EditText>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:id="@+id/Imageview"
            android:adjustViewBounds="true"
            app:layout_collapseMode="parallax"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            app:layout_collapseParallaxMultiplier="0.7"
            android:clickable="true"
            >

        </ImageView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/SendButton"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_baseline_send_24"
            android:layout_alignParentEnd="true"
            android:background="?colorOnBackground"

            android:layout_marginRight="10dp"></ImageButton>
    </RelativeLayout>


