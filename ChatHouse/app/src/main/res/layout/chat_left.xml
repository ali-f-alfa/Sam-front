<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chat_image_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            app:srcCompat="@mipmap/default_user_profile" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@+id/chat_image_left"
            android:backgroundTint="?colorOnSecondary"
            android:minWidth="80dp"
            android:minHeight="60dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:paddingHorizontal="9dp">

                <TextView
                    android:id="@+id/chat_name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="ali"
                    android:textColor="?colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/chat_message_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:maxWidth="250dp"
                    android:text="MessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessage\nhello\nMessageMessageMessageMessage"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal">

                </TextView>

                <TextView
                    android:id="@+id/chat_time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="2:20 PM"
                    android:textColor="?colorPrimary"
                    android:textSize="12dp"
                    android:textStyle="normal">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</LinearLayout>