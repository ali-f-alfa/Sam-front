<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.ProfilePage"
    android:background="@drawable/b22"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/Fake"
    >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        android:layout_marginTop="30dp"
        android:id="@+id/ProfileImageContainer"
        app:cardElevation="5dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:ems="10"
            android:id="@+id/ProfileImage"
            android:src="@drawable/thumb_15951118880user"
            android:layout_gravity="center"
            >
        </ImageView>
    </com.google.android.material.card.MaterialCardView>
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/white"
        android:id="@+id/LineBelow"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/ProfileImageContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:tooltipText="Interests"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ProfileImageContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/UsernameText"
        android:ems="10"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FirstName"
            android:text="Melika"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/Verypink"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LastName"
            android:text="Ahmadi"
            android:textSize="20dp"
            android:textColor="@color/Verypink"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center">

        </TextView>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Username"
        android:gravity="center"
        android:textColor="@color/Verypink"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/UsernameText"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:ems="10"
        >
    </TextView>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Statics"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/UsernameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:columnCount="2"
        android:rowCount="1">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:textColor="@color/Verypink"
            android:fontFamily="sans-serif-medium"
            android:textSize="18dp"
            android:gravity="center"
            android:id="@+id/Followers"
            android:text="3453"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/UsernameText"
            app:layout_constraintEnd_toStartOf="@+id/FollowingText"
            app:layout_constraintStart_toStartOf="parent"
            >

        </TextView>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/Verypink"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/Following"
            android:text="1238"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/UsernameText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

        </TextView>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:textColor="@color/Verypink"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/FollowersText"
            android:text="Followers"
            app:layout_constraintTop_toBottomOf="@+id/Following"
            app:layout_constraintEnd_toStartOf="@+id/FollowingText"
            app:layout_constraintStart_toStartOf="parent"
            >

        </TextView>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:textSize="10dp"
            android:id="@+id/FollowingText"
            android:layout_marginTop="5dp"
            android:textColor="@color/Verypink"
            android:fontFamily="sans-serif-medium"
            android:text="Following"
            app:layout_constraintTop_toBottomOf="@+id/Followers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

        </TextView>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Statics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:rowCount="1"
        android:columnCount="2"
        android:id="@+id/Buttons"
        android:paddingHorizontal="20dp"
        android:useDefaultMargins="true"
        >
        <Button
            android:text="Message"
            android:id="@+id/MessageButton"
            android:layout_width="170dp"
            android:textColor="@color/almostorange"
            android:textSize="12dp"
            android:backgroundTint="@color/white">

        </Button>

        <Button
            android:id="@+id/FollowButton"
            android:layout_width="171dp"
            android:backgroundTint="@color/white"
            android:text="Follow"
            android:textSize="12dp"

            android:textColor="@color/almostorange">

        </Button>

    </GridLayout>
    <Button
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:id="@+id/EditProfileButton"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Statics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/almostorange"
        android:textSize="12dp"
        android:text="Edit Profile">

    </Button>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Bio"
        android:textColor="@color/Verypink"
        app:layout_constraintTop_toBottomOf="@+id/Buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/Bio"
        android:textSize="15dp">

    </TextView>


<!--    <com.google.android.material.card.MaterialCardView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="150dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/EmailText">-->

        <HorizontalScrollView
        android:id="@+id/Interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailText"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ContainerButton">


        </LinearLayout>



    </HorizontalScrollView>
<!--    </com.google.android.material.card.MaterialCardView>-->



    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:id="@+id/InterestsOnOffText"-->
    <!--        android:layout_marginLeft="0dp"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        android:text="Show interests in profile"-->
    <!--        android:textSize="15dp"-->
    <!--        android:fontFamily="sans-serif-medium"-->
    <!--        android:textColor="@color/almostpink"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/Interests"></TextView>-->
    <!--    <Switch-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:id="@+id/InterestsOnOff"-->
    <!--        android:layout_marginLeft="0dp"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        android:textOff="Hide"-->
    <!--        android:textOn="Show"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/Interests">-->

    <!--    </Switch>-->

    <TextView
        android:id="@+id/EmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Email"
        android:textColor="@color/Verypink"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bio">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        app:cardElevation="10dp"
        >
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:id="@+id/Nav"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/SearchButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableTop="@drawable/homee"
                android:textColor="@color/almostorange">

            </TextView>

            <TextView
                android:id="@+id/Pro"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableTop="@drawable/userrrr"
                android:textColor="@color/almostorange">

            </TextView>

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>